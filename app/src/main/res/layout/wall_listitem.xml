<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/postUsernameText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#303030"
        android:layout_below="@id/postUsernameText"/>

    <ImageView
        android:id="@+id/postImageView"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="500dp"
        android:layout_below="@id/postUsernameText"
        android:scaleType="fitXY"
        android:src="@drawable/uploadplaceholder" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#303030"
        android:layout_below="@id/postImageView"/>

    <Button
        android:id="@+id/likeButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/like"
        android:layout_below="@id/postImageView"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/likes"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="0"
        android:gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:layout_below="@id/postImageView"
        android:layout_toEndOf="@id/likeButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/likes"
        android:gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:layout_below="@id/postImageView"
        android:layout_toEndOf="@id/likes"/>

    <TextView
        android:id="@+id/postCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/likeButton"
        android:layout_marginStart="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#616161"
        android:layout_below="@id/postCaption"/>


</RelativeLayout>